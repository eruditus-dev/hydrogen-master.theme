<!-- HTML / Liquid de tu sección -->
<div class="animate__animated {% if section.settings.animation_type != 'none' %}{{ section.settings.animation_type }}{% endif %}">
  <!-- Contenido de la sección (colección de productos) -->
  <h2>{{ section.settings.title }}</h2>

  <div class="collection-products">
    <!-- Código para mostrar productos de la colección seleccionada -->
    {% for product in collections[section.settings.collection].products limit: section.settings.products_to_show %}
      <div class="product-item">
        <!-- Aquí va el contenido de cada producto (imagen, título, etc.) -->
        {{ product.title }}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Featured collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Featured collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Maximum products to show",
      "default": 5,
      "min": 5,
      "max": 15,
      "step": 1
    },
    {
      "type": "select",
      "id": "animation_type",
      "label": "Tipo de Animación",
      "options": [
        { "value": "animate__fadeIn", "label": "Fade In" },
        { "value": "animate__bounce", "label": "Bounce" },
        { "value": "animate__zoomIn", "label": "Zoom In" },
        { "value": "animate__slideInUp", "label": "Slide In Up" },
        { "value": "none", "label": "Sin Animación" }
      ],
      "default": "none"
    }
  ],
  "presets": [
    {
      "name": "Featured collection",
      "category": "Products"
    }
  ]
}
{% endschema %}
